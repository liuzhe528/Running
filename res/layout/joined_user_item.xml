<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee" >

    <com.lzstudio.healthy.view.ciclehead.CircleImageView
        android:id="@+id/joined_user_head"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:focusable="false"
        android:src="@drawable/ic_login_head"
        app:border_color="#FF333333"
        app:border_width="2dp" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/joined_user_head"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_joined_username"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="凉城不暖少年心丶"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电话:" />

            <TextView
                android:id="@+id/tv_joined_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="15573161110"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_joined_message"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/imageview_click_selector"
        android:src="@drawable/icon_message" />

    <ImageView
        android:id="@+id/iv_joined_phone"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_joined_message"
        android:background="@drawable/imageview_click_selector"
        android:src="@drawable/icon_phone" />

</RelativeLayout>