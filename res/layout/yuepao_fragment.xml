<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/yuepao_ll"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yuepao_tv_coming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dddddd"
            android:clickable="true"
            android:gravity="center"
            android:text="正在进行"
            android:textColor="@color/bt_textColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/yuepao_tv_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#6699ff"
            android:clickable="true"
            android:gravity="center"
            android:text="我参加的"
            android:textColor="@color/bt_textColor"
            android:textSize="24sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/yuepao_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/yuepao_ll"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="1dp" >
    </FrameLayout>

    <Button
        android:id="@+id/yuepao_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/bt_start_selector"
        android:clickable="true"
        android:text="我要发布"
        android:textColor="@color/bt_textColor"
        android:textSize="24sp" />

</RelativeLayout>